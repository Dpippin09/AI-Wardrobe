# Environment variables for AI Wardrobe backend

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# API Keys (you'll need to get these)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_google_custom_search_engine_id_here

# Image Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=../uploads

# Web Scraping Configuration
REQUEST_DELAY=1  # Delay between requests in seconds
MAX_PRODUCTS_PER_SEARCH=10

# AI Model Configuration
USE_GPU=True
MODEL_CACHE_DIR=./model_cache

# Database (if you want to add one later)
# DATABASE_URL=sqlite:///wardrobe.db
